    <%= form_with class: 'p-3', model: @escape do |form| %>
      <div class="form-group">
        <!-- form control -->
        <%= form.label :user, 'User Name' %>
        <%= form.text_field :user, class: 'form-control' %>
      </div>
      <div class="form-group">
        <!-- form control -->
        <%= form.label :password, 'Password' %>
        <%= form.text_field :password, class: 'form-control' %>
      </div>
      <button type="submit" class="btn btn-primary">Accedi</button>
    <% end %>
  </div>
  <span class="container d-flex justify-content-center">
  <button type="button" class="btn btn-warning mt-3" data-toggle="collapse" data-target="#demo">Chi siamo</button>
  </span>
